<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent"
    android:background="#ffffffff">
    <LinearLayout
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/btnDrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/height_30dp"
            android:layout_height="@dimen/height_30dp"
            android:layout_centerVertical="true"
            android:id="@+id/btnRemove"
            android:padding="@dimen/p4dp"
            android:background="@color/transparent"
            android:src="@drawable/delete" />
        <TextView
            android:layout_width="@dimen/width_80dp"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/tvBlockTitle"
            android:text="TrpBlkLen"
            android:textSize="@dimen/text_sz_12sp"
            android:layout_toRightOf="@+id/btnRemove"
            android:layout_centerVertical="true"
            style="@style/BidText.CellConstraint" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnTurn"
                    android:text="T"
                    style="@style/BidButton.CellConstraint" />
                <Button
                    android:id="@+id/btnTwoDay"
                    android:text="2d"
                    style="@style/BidButton.CellConstraint" />
                <Button
                    android:id="@+id/btnThreeDay"
                    android:text="3d"
                    style="@style/BidButton.CellConstraint" />
                <Button
                    android:id="@+id/btnFoDay"
                    android:text="4d"
                    style="@style/BidButton.CellConstraint" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/p4dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnTrip"
                    android:text="Trip"
                    android:layout_margin="0dp"
                    style="@style/BidButton.CellConstraint" />
                <Button
                    android:id="@+id/btnBlock"
                    android:text="Block"
                    android:layout_margin="0dp"
                    style="@style/BidButton.CellConstraint" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="@dimen/height_30dp"
        android:layout_height="@dimen/height_30dp"
        android:src="@drawable/icon_menu"
        android:layout_alignParentRight="true"
        android:id="@+id/btnDrag"
        android:background="@color/transparent" />
</RelativeLayout>